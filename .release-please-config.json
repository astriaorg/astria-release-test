{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-search-depth": 10,
  "commit-search-depth": 50,
  "include-v-in-tag": true,
  "separate-pull-requests": true,
  "packages": {
    "crates/astria-cli": {
      "release-type": "rust",
      "component": "cli",
      "package-name": "astria-cli"
    },
    "crates/astria-account-monitor": {
      "release-type": "rust",
      "component": "account-monitor",
      "package-name": "astria-account-monitor"
    },
    "crates/astria-conductor": {
      "release-type": "rust",
      "component": "conductor",
      "package-name": "astria-conductor"
    },
    "crates/astria-composer": {
      "release-type": "rust",
      "component": "composer",
      "package-name": "astria-composer"
    },
    "crates/astria-sequencer": {
      "release-type": "rust",
      "component": "sequencer",
      "package-name": "astria-sequencer",
        "additionalProperties": {
          "extra-files": [
            {
              "type": "yaml",
              "path": "charts/sequencer/Chart.yaml",
              "jsonpath": "$.appVersion"
            }
        ]
        }
    },
    "crates/astria-sequencer-relayer": {
      "release-type": "rust",
      "component": "sequencer-relayer",
      "package-name": "astria-sequencer-relayer"
    },
    "crates/astria-bridge-withdrawer": {
      "release-type": "rust",
      "component": "bridge-withdrawer",
      "package-name": "astria-bridge-withdrawer"
    },
    "crates/astria-auctioneer": {
      "release-type": "rust",
      "component": "auctioneer",
      "package-name": "astria-auctioneer"
    },
    "charts/sequencer": {
      "release-type": "helm",
      "component": "sequencer",
      "package-name": "sequencer"
    }
  }
}
